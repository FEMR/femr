# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /*path/                     femr.ui.controllers.ApplicationController.removeTrailingSlash(path: String)
POST        /admin/users/create         @femr.ui.controllers.admin.UsersController.createPost()
GET         /admin/users/create         @femr.ui.controllers.admin.UsersController.createGet()
GET         /admin/users                @femr.ui.controllers.admin.UsersController.index()
GET         /admin                      femr.ui.controllers.admin.AdminController.index()
GET         /pharmacy                   @femr.ui.controllers.PharmaciesController.index()
GET         /pharmacy/find              @femr.ui.controllers.PharmaciesController.createGet()
GET         /show/encounter/:id         @femr.ui.controllers.SearchController.viewEncounter(id: java.lang.Integer)
GET         /show                       @femr.ui.controllers.SearchController.createGet()
GET         /triage/find                @femr.ui.controllers.TriageController.createPopulatedGet()
GET         /triage                     @femr.ui.controllers.TriageController.createGet()
POST        /triage                     @femr.ui.controllers.TriageController.createPost(id: java.lang.Integer)
GET         /medical/find               @femr.ui.controllers.MedicalController.createPopulatedGet()
POST        /medical                    @femr.ui.controllers.MedicalController.createPopulatedPost()
GET         /medical                    @femr.ui.controllers.MedicalController.createGet()
GET         /logout                     @femr.ui.controllers.SessionsController.delete()
POST        /login                      @femr.ui.controllers.SessionsController.createPost()
GET         /login                      @femr.ui.controllers.SessionsController.createGet()
GET         /                           @femr.ui.controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file               controllers.Assets.at(path="/public", file)
